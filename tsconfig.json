{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "target": "es6",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "outDir": "dist",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noEmit": true,
      "allowImportingTsExtensions": true
   },
   "include": ["**/*.ts"],
   "exclude": ["node_modules", "**/*.spec.ts"]
}